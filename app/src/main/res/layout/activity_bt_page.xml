<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BTPageView">

    <ListView
        android:id="@+id/select_device_list"
        android:layout_width="428dp"
        android:layout_height="376dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/show_BT_paired_devices"
        android:layout_width="183dp"
        android:layout_height="114dp"
        android:layout_marginTop="8dp"
        android:text="@string/show_paired_devices"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messageText" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="348dp"
        android:layout_height="166dp"
        android:layout_marginTop="20dp"
        android:text="La aplicación solo muestra los dispoitivos ya guardados. Si el dispositivo al que se quiere conectar no figura en la lsita deberá emparejarlo por el sistema operativo"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_device_list" />

</androidx.constraintlayout.widget.ConstraintLayout>